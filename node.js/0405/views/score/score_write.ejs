    </div>
  </nav>

    <div class="container" style="margin-top:20px; width:80%;" >
      <h3 style="text-align:center; margin-bottom:30px;">게시판</h3>
      <form id="myform" name="myform">
      <table class="table" style="text-align:center; margin-bottom:30px">
        <colgroup>
          <col style="width:40%">
          <col style="width:60%">
        </colgroup>
        <thead>
          <tr class="table-warning" style="text-align:center;">
            <th>항목</th>
            <th>내용</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>이름</td>
            <td><input type="text" name = "name"></td>
          </tr>
          <tr>
            <td>국어</td>
            <td><input type="text" name = "kor"></td>
          </tr>
          <tr>
            <td>영어</td>
            <td><input type="text" name = "eng"></td>
          </tr>
          <tr>
            <td>수학</td>
            <td><input type="text" name = "mat"></td>
          </tr>
        </tbody>
      </table>
      <div class="container" style="text-align:right;">
        <button type="button" id="btnSave" class="btn btn-outline-warning">글쓰기</button>
      </div>
    </form>
  </div>
</body>
</html>

<script>
  $(document).ready(()=>{
    $("#btnSave").click(()=>{
      $("#myform").prop("method", "post");
      $("#myform").prop("action", "/score/save");
      $("#myform").submit();
    })
  });
</script>